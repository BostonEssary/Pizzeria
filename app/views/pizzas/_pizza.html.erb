<div class="pizza-card">
    <h2><%= pizza.name %></h2>
    <% pizza.toppings.each do |topping|%>
        <%= topping.name %>
    <% end %>
    <div class="pizza-links">
        <%= link_to "Edit Pizza", edit_pizza_path(pizza.id)%>
        <%= link_to "Delete Pizza", pizza_path(pizza.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                    } %>
    </div>
</div>